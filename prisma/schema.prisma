generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

// ---- Here we start the custom models ----

model User {
  // ---- This is all better auth ----
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  @@map("user")
  
  // ---- These are our custom attributes ----
  role          Role      @default(USER)

  // Task relationships
  createdTasks  Task[]    @relation("TaskCreator")
  completedTasks Task[]   @relation("TaskCompletedBy")

  // Access relationships
  invitations Invitation[] @relation("UserInvited")
  sentInvitations Invitation[] @relation("UserInviter")

  applications Application[] @relation("UserApplications")
  assignments Assignment[] @relation("UserAssignments")
  subscriptions Subscription[] @relation("UserSubscriptions")
    
  // Achievement relationships
  userAchievements UserAchievement[]

  notes           Note[]        @relation("UserNotes")
}

model Task {
  id              String        @id @default(cuid())
  title           String
  description     String?
  isPublic          Boolean       @default(false)
  status          TaskStatus    @default(TODO)
  deadline        DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  // Creator relationship
  creatorId       String
  creator         User          @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  
  // Completed by relationship
  completedById   String?
  completedBy     User?         @relation("TaskCompletedBy", fields: [completedById], references: [id], onDelete: SetNull)
  completedAt     DateTime?
  
  parentTaskId    String?
  parentTask      Task?         @relation("TaskHierarchy", fields: [parentTaskId], references: [id], onDelete: Cascade)
  subTasks        Task[]        @relation("TaskHierarchy")

  recurrenceType  Recurrence?
  recurrenceExpiresAt DateTime?
  recurrences     Int?  

  // Addons
  notes           Note[]        @relation("TaskNotes")
  objectives      Objective[]  @relation("TaskObjectives")
    
  // New better models for relations!
  applications    Application[] @relation("TaskApplications")
  assignments     Assignment[]  @relation("TaskAssignments")
  invitations Invitation[] @relation("TaskInvitation")
  subscriptions Subscription[] @relation("TaskSubscriptions")

  @@map("task")
}

model Invitation {
  invitationId String @id @default(cuid())
  inviterId String
  invitedId String
  taskId String 

  invited User  @relation("UserInvited", fields: [invitedId], references: [id], onDelete: Cascade)
  inviter User  @relation("UserInviter", fields: [inviterId], references: [id], onDelete: Cascade)
  task Task @relation("TaskInvitation", fields: [taskId], references: [id], onDelete: Cascade)
}

model Application {
    applicationId String @id @default(cuid())
    taskId String
    userId String
    task Task @relation("TaskApplications", fields: [taskId], references: [id], onDelete: Cascade)
    user User @relation("UserApplications", fields: [userId], references: [id], onDelete: Cascade)
}

model Assignment {
    assignmentId String @id @default(cuid())
    taskId String
    userId String
    task Task @relation("TaskAssignments", fields: [taskId], references: [id], onDelete: Cascade)
    user User @relation("UserAssignments", fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  subscriptionId String @id @default(cuid())
  userId String
  taskId String
  task Task @relation("TaskSubscriptions", fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation("UserSubscriptions", fields: [userId], references: [id], onDelete: Cascade)
}

model Note {
  id          String    @id @default(cuid())
  text        String
  isPositive  Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // User who created the note
  userId      String
  user        User      @relation("UserNotes", fields: [userId], references: [id], onDelete: Cascade)
  
  // Task the note belongs to
  taskId      String
  task        Task      @relation("TaskNotes", fields: [taskId], references: [id], onDelete: Cascade)

  @@map("note")
}

model Objective {
    objectiveId String @id @default(cuid())
    taskId String
    objective String?
    taskGoal Int @default(0)
    period  Period @default(MONTH)

    task Task @relation("TaskObjectives", fields: [taskId], references: [id], onDelete: Cascade)
}

model Achievement {
  code               String    @id @unique 
  name               String
  avatar             String

  type               AchievementType @default(TASK_COMPLETION)
  requiredTasks      Int?      
  requiredReviews    Int?
  requiredObjectives Int?

  userAchievements   UserAchievement[]
}

model UserAchievement {
  id              String   @id @default(cuid())
  userId          String
  achievementCode String
  unlockedAt      DateTime @default(now())

  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement  Achievement @relation(fields: [achievementCode], references: [code], onDelete: Cascade)

  @@unique([userId, achievementCode]) 
}

model UserStats {
  userId          String    @id @unique
  tasksCreated    Int    @default(0)
  tasksCompleted  Int    @default(0)
  tasksAccepted   Int    @default(0)
  reviewsGiven    Int    @default(0)
}

enum AchievementType {
  TASK_COMPLETION
  TASK_REVIEW
  TASK_ACCEPTED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  CANCELLED
}

enum Role {
    ADMIN
    USER
}

enum Period {
    DAY
    WEEK
    MONTH
    YEAR
}

enum Recurrence {
    DAILY
    WEEKLY
    MONTHLY
    PARENT
}
