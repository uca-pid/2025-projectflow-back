generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  @@map("user")
  
  // Custom Fields
  role          Role      @default(USER)

  // Task relationships
  createdTasks  Task[]    @relation("TaskCreator")
  assignedTasks Task[]    @relation("TaskAssignments")
  trackedTasks  Task[]    @relation("TaskTrackers")
  appliedTasks  Task[]    @relation("TaskApplications")
  completedTasks Task[]   @relation("TaskCompletedBy")


  invitations Invitation[] @relation("UserInvited")
  sentInvitations Invitation[] @relation("UserInviter")
}

enum Role {
    ADMIN
        USER
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Task {
  id              String        @id @default(cuid())
  title           String
  description     String?
  isPublic          Boolean       @default(false)
  status          TaskStatus    @default(TODO)
  deadline        DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  // Creator relationship
  creatorId       String
  creator         User          @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  
  // Completed by relationship
  completedById   String?
  completedBy     User?         @relation("TaskCompletedBy", fields: [completedById], references: [id], onDelete: SetNull)
  
  // Assigned users (many-to-many)
  assignedUsers   User[]        @relation("TaskAssignments")
  trackedUsers    User[]        @relation("TaskTrackers")

  // Applied users (many-to-many)
  appliedUsers    User[]        @relation("TaskApplications")
  invitations Invitation[] @relation("TaskInvitation")

  parentTaskId    String?
  parentTask      Task?         @relation("TaskHierarchy", fields: [parentTaskId], references: [id], onDelete: Cascade)
  subTasks        Task[]        @relation("TaskHierarchy")


  @@map("task")
}

model Invitation {
  invitationId String @id @default(cuid())
  inviterId String
  invitedId String
  taskId String 

  invited User  @relation("UserInvited", fields: [invitedId], references: [id], onDelete: Cascade)
  inviter User  @relation("UserInviter", fields: [inviterId], references: [id], onDelete: Cascade)
  task Task @relation("TaskInvitation", fields: [taskId], references: [id], onDelete: Cascade)
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  CANCELLED
}

